
field f: Ref

method f1_pre(a: Ref, read: Perm)
    requires none < read && read < write
    requires acc(a.f, read)
{}

method f1(a: Ref)
{
    var v: Ref
    v := a.f
    inhale acc(a.f, 1/2)
    exhale acc(a.f, 1/2)
}

method f2_pre(a: Ref)
    requires true
{}

method f2(a: Ref)
{
    var v: Ref
    inhale acc(a.f, 1/2)
    v := a.f
    exhale acc(a.f, 1/2)
}

method f3_pre(a: Ref, read: Perm)
