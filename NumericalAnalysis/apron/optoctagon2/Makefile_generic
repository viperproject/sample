CC     := gcc
# GCC architecture flags
AFLAGS := -D_GNU_SOURCE -pthread -m64 -march=native -fno-tree-vectorize
#-march=corei7-avx
# GCC debugging flags
#-Wall -masm=intel -save-temps -fverbose-asm
DFLAGS := -g -DNUM_DOUBLE #-DSPARSE
#DFLAGS := -g -DNUM_MPQ -DSPARSE
CFLAGS := -O3 -fPIC  -std=c99 $(AFLAGS) $(DFLAGS)
LIBS   = -lm -L/usr/local/lib -lapron -lmpfr -lgmp -loctD
INCLUDES := -I/usr/include -I/usr/local/include
