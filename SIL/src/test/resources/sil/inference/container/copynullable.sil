var val: Int

/** Creates a new container whose value is the same as the given container.
  * Returns null if and only if the parameter is null.
  */
method copyNullable(this: Ref) returns (other: Ref) {
    if (this == null) {
        other := null
    } else {
        other := new()
        other.val := this.val
    }
}

/** Tests that `copyNullable` returns all permissions. */
method testCopyNullablePerms() {
    var this: Ref
    var other: Ref
    this := new()
    this.val := 42

    other := copyNullable(this)

    assert(acc(this.val, write))
    assert(acc(other.val, write))
}

method testCopyNullableReturnValue() {
    var this: Ref
    var other: Ref
    this := new()
    this.val := 42

    other := copyNullable(this)

    //:: UnexpectedOutput(assert.failed:assertion.false, /silicon/issue/999/)
